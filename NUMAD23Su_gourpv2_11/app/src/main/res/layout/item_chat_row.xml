<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="80dp"
        android:background="@color/cardview_light_background"
        android:backgroundTint="@color/chat_receiver"
        android:padding="8dp"
        android:id="@+id/receiver_chat_layout">
        <ImageView
            android:id="@+id/reciever_chat_image"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:padding="3dp"
            android:scaleType="fitXY"
            tools:srcCompat="@tools:sample/avatars" />

        <TextView
            android:id="@+id/receiver_message_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="dummy text"
            android:textColor="@color/white"
            android:textSize="18sp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="80dp"
        android:background="@color/cardview_light_background"
        android:backgroundTint="@color/chat_sender"
        android:padding="8dp"
        android:layout_alignParentRight="true"
        android:id="@+id/sender_chat_layout">
        <ImageView
            android:id="@+id/sender_chat_image"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:padding="3dp"
            android:scaleType="fitXY"
            tools:srcCompat="@tools:sample/avatars" />

        <TextView
            android:id="@+id/sender_message_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="dummy text"
            android:textColor="@color/white"
            android:textSize="18sp" />


    </LinearLayout>

</RelativeLayout>